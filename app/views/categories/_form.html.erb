<%= form_with model: category, local: true do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h4>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, "Category Name", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :category_type, "Type", class: "form-label" %>
        <%= form.select :category_type,
            options_for_select([['Expense', 'expense'], ['Income', 'income']], category.category_type),
            {}, class: "form-select", required: true %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :color, "Color", class: "form-label" %>
    <%= form.color_field :color, class: "form-control form-control-color", required: true %>
    <div class="form-text">Choose a color to represent this category in charts and displays.</div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", categories_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>